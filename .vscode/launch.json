{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "pytestFilter",
      "type": "promptString",
      "description": "Pytest filter",
      "default": "test"
    }
  ],
  "configurations": [
    {
      "name": "sphinx-jsx: pytest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-vv", "-s", "-k", "${input:pytestFilter}"],
      "cwd": "${workspaceFolder}/pyprojects/sphinx-jsx",
      "justMyCode": false
    },
    {
      "name": "build sphinx-rtd docs",
      "type": "python",
      "request": "launch",
      "python": "${workspaceFolder}/extern/readthedocs/sphinx_rtd_theme/.venv/bin/python",
      "module": "sphinx",
      "args": ["-T", "-E", "-b", "jsx", ".", "_build/jsx"],
      "cwd": "${workspaceFolder}/extern/readthedocs/sphinx_rtd_theme/docs",
      "justMyCode": false
    }
  ]
}
