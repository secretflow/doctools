{
  "name": "doctools",
  "version": "0.2.0",
  "private": true,
  "files": [],
  "scripts": {
    "build": "python3 -m hatch clean && hatch build -t sdist -t wheel -t custom",
    "test:pytest": "python3 -m pytest",
    "lint:black": "python3 -m black --check src tests",
    "lint:ruff": "python3 -m ruff check src tests",
    "lint:pyright": "pyright src",
    "release": "python3 -m hatch publish pyproject/dist"
  },
  "devDependencies": {
    "mdserver": "workspace:^"
  },
  "nx": {
    "$schema": "https://cdn.jsdelivr.net/npm/nx@16.7.0/schemas/project-schema.json",
    "targets": {
      "build": {
        "inputs": [
          ":default",
          ":python"
        ]
      }
    }
  }
}
