{
  "name": "monorepo",
  "private": true,
  "version": "0.0.0",
  "files": [],
  "license": "MIT",
  "repository": "https://github.com/secretflow/doctools",
  "description": "SecretFlow documentation tools",
  "scripts": {
    "bootstrap": "pnpm install && rye sync --no-lock && pnpm run ci:setup",
    "postinstall": "is-ci || husky install",
    "changeset": "changeset",
    "clean": "git clean -fX .",
    "dev:all": "nx run-many -t dev",
    "format:black": "python -m black --check examples",
    "format:prettier": "prettier --check --ignore-unknown .",
    "ci:setup": "nx run-many -p tag:postinstall -t setup:umi -t build",
    "ci:check:javascript": "nx run-many -t format:prettier -t lint:eslint -t lint:stylelint -t test:vitest -t typecheck:tsc",
    "ci:check:python": "nx run-many -t format:black -t lint:ruff -t test:pytest -t typecheck:pyright",
    "ci:build": "nx run-many -t build",
    "ci:publish": "nx run-many --nx-bail -t build && changeset publish && nx run-many --nx-bail -t publish"
  },
  "nx": {},
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/blocks": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@storybook/testing-library": "^0.2.2",
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^0.32.4",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mdx": "^2.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^13.1.1",
    "lint-staged": "^13.3.0",
    "nx": "^16.10.0",
    "openapi-typescript-codegen": "^0.25.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "pyright": "^1.1.342",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "storybook": "^7.6.6",
    "stylelint": "^15.11.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "tsup": "^6.7.0",
    "typescript": "^5.3.3",
