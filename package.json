{
  "name": "monorepo",
  "private": true,
  "version": "0.0.0",
  "files": [],
  "license": "MIT",
  "repository": "https://github.com/secretflow/doctools",
  "description": "SecretFlow documentation tools",
  "scripts": {
    "bootstrap": "./scripts/setup_all.sh",
    "postinstall": "is-ci || husky install",
    "changeset": "changeset",
    "clean": "git clean -fX .",
    "format:prettier": "prettier --check --ignore-unknown .",
    "ci:javascript": "nx run-many -t format:prettier -t lint:eslint -t lint:stylelint -t test:vitest -t typecheck:tsc",
    "ci:python": "nx run-many -t format:black -t lint:ruff -t test:pytest -t typecheck:pyright",
    "ci:release": "nx run-many --nx-bail -t build && changeset publish && nx run-many --nx-bail -t publish:hatch"
  },
  "nx": {
    "includedScripts": [
      "format:prettier"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@secretflow/repo-utils": "workspace:^",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^0.32.4",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-mdx": "^2.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nx": "^16.5.2",
    "postcss": "^8.4.31",
    "prettier": "^3.0.0",
    "pyright": "^1.1.323",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "stylelint": "^15.10.1",
    "stylelint-config-css-modules": "^4.2.0",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.2.0",
    "vitest": "^0.32.4"
  },
  "engines": {
    "node": ">=16.20.0"
  },
  "packageManager": "pnpm@8.7.6"
}
